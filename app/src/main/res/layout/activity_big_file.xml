<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.knowing.what.mobileclean.big.ImprovedBigFileViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E9EEF4">

        <LinearLayout
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_reture"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:padding="16dp"
                android:background="@color/white"
                android:text="Large File Clean"
                android:textColor="#FF191919"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/filter_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingVertical="11dp"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/icon_san"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="All types"
                    android:textColor="#FFA3A3A3"
                    android:textSize="12sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/icon_san"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="All Size"
                    android:layout_marginHorizontal="64dp"
                    android:textColor="#FFA3A3A3"
                    android:textSize="12sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/icon_san"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="All Time"
                    android:textColor="#FFA3A3A3"
                    android:textSize="12sp"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_files"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:listitem="@layout/item_file_clean"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="#E9EEF4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:paddingVertical="11dp"
                android:text="@string/delete"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp"
                android:enabled="false"
                app:cornerRadius="32dp"
                android:backgroundTint="#4EDA7D" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNoFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No file yet."
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center"
            android:drawableTop="@drawable/weikong"
            android:textColor="#FFA1A1A1"
            android:textSize="12sp" />
    </FrameLayout>
</layout>